services:
# Service untuk Aplikasi PHP (daffa sukaphorn pukhirapat)
  app:
    build: .
    container_name: sukaphorn_app
    volumes:
      - .:/var/www/html
    env_file:
    - .env
    depends_on:
      - db
    networks:
      - appnet
    expose:       # <-- Open port untuk ngrok
    - "9000"
  nginx:
    image: nginx:alpine
    container_name: satuanggaran_nginx
    ports:
      - "8082:80"  # akses lokal: http://localhost:8082
    volumes:
      - .:/var/www/html
      - ./docker/nginx/default.conf:/docker/nginx/conf.d/default.conf
    depends_on:
      - app
    networks:
      - appnet
# Service untuk Database MySQL
  db:
    image: mysql:8.0
    container_name: sukaphorn_db
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: panevkejaksaan_prosakip
    ports:
      - "3307:3306" # akses lokal MySQL
    volumes:
      - ./docker/mysql/my.cnf:/etc/mysql/conf.d/my.cnf
      - dbdata:/var/lib/mysql
    networks:
      - appnet

# Service untuk ngrok
  ngrok:
    image: ngrok/ngrok:latest
    container_name: laravel_ngrok
    command: ["ngrok", "http", "nginx:8082"]
    environment:
      NGROK_AUTHTOKEN: ${NGROK_AUTHTOKEN}
    depends_on:
      - nginx
    networks:
      - appnet
    ports:
      - "4040:4040"  # akses dashboard ngrok

networks:
  appnet:
  driver: bridge
  
volumes:
  dbdata: